<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Add favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="../favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="../favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../favicon/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <title>Početna</title>
</head>
<body>
<%- include('navigacija.ejs') %>

<!-- Najpopularniji -->
<h1 class="naslov">Najpopularniji recepti</h1>
<div class="container-fluid container-kartice">
    <div class="row row-cols-1 row-cols-md-3">
        <% for (let i=0; i<najpopularniji.length; i++) { %>
            <a href="/detaljno-o-receptu/<%= najpopularniji[i].recept_id %>">
            <div class="col mb-4">
                    <div class="card h-100" style="margin: 5%">
                        <img class="card-img-top" src="data:image/jpeg;base64, <%= najpopularniji[i].slika.toString('base64') %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= najpopularniji[i].naziv_recepta%></h5>
                            <% const truncatedOpisNovi = najpopularniji[i].opis_recepta.substring(0, 150); %>
                            <p class="card-text"><%= truncatedOpisNovi.length === 150 ? truncatedOpisNovi + '...' : truncatedOpisNovi %></p>
                        </div>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>

<!-- Najnoviji -->
<h1 class="naslov">Najnoviji recepti</h1>
<div class="container-fluid container-kartice">
    <div class="row row-cols-1 row-cols-md-3">
        <% for (let i=0; i<najnoviji.length; i++) { %>
            <a href="/detaljno-o-receptu/<%= najnoviji[i].recept_id %>">

            <div class="col mb-4">
                <div class="card h-100" style="margin: 5%">
                    <img class="card-img-top" src="data:image/jpeg;base64, <%= najnoviji[i].slika.toString('base64') %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= najnoviji[i].naziv_recepta %></h5>
                        <% const truncatedOpis = najnoviji[i].opis_recepta.substring(0, 100); %>
                        <p class="card-text"><%= truncatedOpis.length === 100 ? truncatedOpis + '...' : truncatedOpis %></p>
                    </div>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</div>

<!-- Ako nije logiran "Pridružite nam se" -->
<!-- if(not logiran) -->
<%if(!logovan) {%>
    <div class="poziv">
        <a href="/signup"><h1>Pridruži nam se</h1></a>
        <h3>I podijeli svoje recepte sa nama</h3>
    </div>
<%}%>

<!-- Footer -->
<%- include('footer.ejs') %>

</body>
</html>