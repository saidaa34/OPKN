<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

<div class="container-fluid">
    <a class="nav-link odjava-admin" href="/logout">Odjavi se</a>
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
            <tr>
                <th>Ime i prezime</th>
                <th>E-mail</th>
                <th>Tip korisnika</th>
                <th>Broj recepata</th>
                <th>Obriši korisnika</th>
            </tr>
            </thead>
            <tbody>
            <% korisnici.forEach(korisnik => { %>
                <tr>
                    <td><%= korisnik.ime_prezime %></td>
                    <td><%= korisnik.email %></td>
                    <td><%= korisnik.tip_korisnik %></td>
                    <td><%= korisnik.broj_recepata %></td>
                    <td>
                        <button type="button" class="btn btn-outline-dark" onclick="brisi(<%= korisnik.korisnik_id %>)">
                            Briši korisnika
                        </button>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>

    </div>
</div>
<script>
    function brisi(id) {
        window.location = `/admin/brisi-korisnika/${id}`
    }
</script>
</body>

</html>
